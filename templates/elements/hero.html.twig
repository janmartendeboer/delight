<figure itemprop="primaryImageOfPage" itemscope itemtype="https://schema.org/ImageObject" title="{{ alt }}">
    <picture id="{{ id }}_hero" class="hero">
        <source type="image/webp" srcset="img/photos/{{ id }}_hero-1280x.webp" media="(min-width: 2000px)">
        <source type="image/jpeg" srcset="img/photos/{{ id }}_hero-1280x.jpg" media="(min-width: 2000px)">
        <source type="image/webp" srcset="img/photos/{{ id }}_hero-1600x.webp 2x">
        <source type="image/jpeg" srcset="img/photos/{{ id }}_hero-1600x.jpg 2x, img/photos/{{ id }}_hero-800x.jpg">
        <img
                alt="{{ alt }}"
                width="{{ width|default(800) }}"
                height="{{ height|default(533) }}"
                itemprop="contentUrl"
                src="img/photos/{{ id }}_hero-800x.webp">
    </picture>
</figure>
